<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/primary_dark"
    tools:context=".JobDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/jobDetailsLayout"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconTint="@color/white"
                android:id="@+id/backBtn"
                app:iconSize="30dp"
                android:layout_gravity="start"
                android:minWidth="0dp"
                android:padding="0dp"
                app:backgroundTint="@null"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:id="@+id/companyImage"
                android:padding="10dp"
                app:shapeAppearanceOverlay="@style/circle"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/jobTitleTxt"
                android:textSize="26sp"
                android:layout_marginTop="10dp"
                android:text="Job Title"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/companyNameTxt"
                android:textSize="20sp"
                android:text="Company Name"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/outfit_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="Job Category"
                        android:textColor="@color/white"
                        android:fontFamily="@font/outfit_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/jobCatTxt"
                        android:textSize="22sp"
                        android:text="Job Category"
                        android:textColor="@color/white"
                        android:fontFamily="@font/outfit_bold"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/white"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="Salary Range"
                        android:textColor="@color/white"
                        android:fontFamily="@font/outfit_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/salaryRangeTxt"
                        android:textSize="22sp"
                        android:text="Salary Range"
                        android:textColor="@color/white"
                        android:fontFamily="@font/outfit_bold"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:textAlignment="center"
                android:text="Experience"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/experienceTxt"
                android:textAlignment="center"
                android:text="Experience"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Job Description"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/jobDescTxt"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Experience"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Job Requirements"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/jobReqTxt"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Experience"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Benefits"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/jobBenefitsTxt"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Benefits"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/outfit_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/bookmarkBtn"
                    android:textSize="18sp"
                    android:background="@drawable/orange_button_outline"
                    android:text="Bookmark"
                    android:fontFamily="@font/outfit_bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_bold"
                    android:background="@drawable/outline_primary_button"
                    android:text="Apply"
                    android:textSize="18sp"
                    android:id="@+id/applyBtn"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:indicatorSize="50dp"
            android:visibility="gone"
            android:indeterminate="true"
            app:indicatorColor="@color/secondary"
            android:id="@+id/progressIndicator"
            android:layout_height="wrap_content"/>

    </FrameLayout>
</ScrollView>